
<h1>Listing Stocks</h1>

<div class="run_select">
  <% if runs.size > 0 && !selected_run.nil? %>
      <label>Run:</label>
      <a>
        <%= select_tag 'select_run', options_for_select(runs.map{|run| ["#{run.name}", run.id] }, selected_run.id) %>
      </a>
  <% end %>

</div>


<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <tr>
    <th>Symbol</th>
    <th>Current Price</th>
    <th>Change Last Day</th>
    <th>Starting Price</th>
    <th>Change From Start</th>
  </tr>

  <div id="stocks_result">
    <%= render 'stocks_result', :stocks => stocks %>
  </div>

  </tbody>
</table>
